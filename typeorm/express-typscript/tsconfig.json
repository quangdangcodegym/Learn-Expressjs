{
    "compilerOptions": {
    "module": "commonjs",           //module: Chỉ định phương thức khởi tạo module. Node sử dụng commonjs.
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",         //target: Level của output ( ở đây là es6)
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false
    },
    "exclude": ["node_modules", "dist"]
   }